@model List<Warehouse.Models.Products.ProductGroupViewModel>

@{ 
    Layout = null;
}

@Html.RouteLink("Home", new
                        {
                            controller = "Product",
                            action = "List",
                            categoryId = 0,
                            page = 1
                        })
<li>
    <a href="" class="dropdown-toggle">Filters</a>
    <ul class="d-menu" data-role="dropdown">
        @foreach (var link in Model)
        {
            @Html.RouteLink(link.Name, new
              {
                controller = "Product",
                action = "List",
                categoryId = link.Id,
                page = 1
              })
        }
    </ul>
</li>
